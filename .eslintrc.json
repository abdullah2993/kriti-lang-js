{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"airbnb-typescript/base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"project": "./tsconfig.eslint.json"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-tabs": "off",
		"indent": "off",
		"@typescript-eslint/indent": [
			"error",
			"tab"
		],
		"no-continue": "off",
		"no-plusplus": "off",
		"max-classes-per-file": "off",
		"import/prefer-default-export": "off",
		"class-methods-use-this": "off",
		"max-len": [
			"error",
			{
				"code": 140
			}
		]
	},
	"ignorePatterns": [
		"node_modules/",
		"dist/",
		"coverage/",
		"**/*.d.ts"
	]
}